<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollSubs"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.hatim.locnacelle.Measures">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:id="@+id/telemetre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/telemetre"
            android:text="Télémètre"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:gravity="center"
            />

        <Button
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:id="@+id/distancemetre"
            android:layout_below="@+id/telemetre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/distancemetre"
            android:text="Distance mètre"
            android:textColor="@android:color/black"

            android:textSize="20dp"
            android:gravity="center"
            />

        <Button
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/autodistance"
            android:id="@+id/autodistance"
            android:layout_below="@+id/distancemetre"
            android:text="Auto-distance"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            />

        <Button
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/distanceparcourue"
            android:text="Distance parcourue"
            android:id="@+id/distanceparcourue"
            android:layout_below="@+id/autodistance"
            android:textColor="@android:color/black"
            android:textSize="20dp"

            android:gravity="center"
            />

        <Button
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/montagephoto"
            android:text="Prise de photo et montage facile"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_below="@+id/distanceparcourue"
            android:id="@+id/montagePhoto"

            android:gravity="center"
            />



    </RelativeLayout>


</ScrollView>

